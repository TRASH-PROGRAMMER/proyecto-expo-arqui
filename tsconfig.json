{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "ignoreDeprecations": "6.0",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./dist"
  },
  "include": ["*.ts", "handlers/**/*", "functions/**/*", "src/app.ts", "src/handler.ts"],
  "exclude": ["node_modules", "dist"]
}